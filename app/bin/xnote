#!/bin/bash

# xnote CLI - Manage xnote as a background service

APP_DIR="/Users/unclecode/devs/xnote/app"
PID_FILE="$HOME/.xnote/xnote.pid"
LOG_FILE="$HOME/.xnote/xnote.log"

# Ensure data directory exists
mkdir -p "$HOME/.xnote"

start_app() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        if ps -p $PID > /dev/null 2>&1; then
            echo "xnote is already running (PID: $PID)"
            return 1
        else
            rm "$PID_FILE"
        fi
    fi
    
    echo "Starting xnote..."
    cd "$APP_DIR"
    
    nohup npm start > "$LOG_FILE" 2>&1 &
    PID=$!
    echo $PID > "$PID_FILE"
    
    sleep 2
    if ps -p $PID > /dev/null 2>&1; then
        echo "xnote started (PID: $PID)"
        echo "Press Cmd+Ctrl+Shift+N to show window"
    else
        echo "Failed to start. Check logs: $LOG_FILE"
        rm "$PID_FILE"
        return 1
    fi
}

stop_app() {
    if [ ! -f "$PID_FILE" ]; then
        echo "xnote is not running"
        return 1
    fi
    
    PID=$(cat "$PID_FILE")
    if ! ps -p $PID > /dev/null 2>&1; then
        echo "xnote is not running"
        rm "$PID_FILE"
        return 1
    fi
    
    echo "Stopping xnote..."
    kill $PID
    
    for i in {1..10}; do
        if ! ps -p $PID > /dev/null 2>&1; then
            rm "$PID_FILE"
            echo "xnote stopped"
            return 0
        fi
        sleep 0.5
    done
    
    kill -9 $PID 2>/dev/null
    rm "$PID_FILE"
    echo "xnote stopped (forced)"
}

status_app() {
    if [ ! -f "$PID_FILE" ]; then
        echo "xnote is not running"
        return 1
    fi
    
    PID=$(cat "$PID_FILE")
    if ps -p $PID > /dev/null 2>&1; then
        echo "xnote is running (PID: $PID)"
    else
        echo "xnote is not running"
        rm "$PID_FILE"
        return 1
    fi
}

case "$1" in
    start)   start_app ;;
    stop)    stop_app ;;
    status)  status_app ;;
    restart) stop_app; sleep 1; start_app ;;
    logs)    [ "$2" = "-f" ] && tail -f "$LOG_FILE" || tail -50 "$LOG_FILE" ;;
    *)
        echo "Usage: xnote <start|stop|restart|status|logs>"
        ;;
esac
